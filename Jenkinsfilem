pipeline {
    agent any
    tools {
        maven 'M2_HOME'
    }
    
    stages {
        stage('Checkout Git Repository') {
            steps {
                echo 'Checking out the Git repository...'
                git branch: 'master', url: 'https://github.com/YamanaMeghana/Medicure-healthcare.git'
            }
        }
        
        stage('Build Package') {
            steps {
                echo 'Building the package using Maven...'
                sh 'mvn clean package'
            }
        }
    } 
